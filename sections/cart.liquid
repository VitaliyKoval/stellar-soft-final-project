{% comment %}
  This section is used in the cart template to render /cart page with an
  overview of the items in customer's cart.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/cart
{% endcomment %}

<style>
  /* --- 1. Basic Styles --- */
  .cart-container {
    max-width: 1000px;
    margin: 40px auto;
    padding: 0 20px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  }

  .cart-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 30px;
    color: #333;
  }

  .cart-form {
    width: 100%;
  }

  /* --- 2. Table --- */
  .cart-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 30px;
  }

  .cart-table td {
    padding: 20px 10px;
    border-bottom: 1px solid #e5e5e5;
    vertical-align: middle;
  }

  /* --- 3. Square Image --- */
  .cart-image-cell {
    width: 120px;
  }

  /* Wrapper to force a square */
  .image-wrapper {
    display: block;
    width: 100%;
    aspect-ratio: 1 / 1; /* 1:1 square aspect ratio */
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    background-color: #f8f8f8;
  }

  /* Image styling within the wrapper */
  .image-wrapper img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Fills the square, cropping excess */
    border-radius: 8px; /* Additionally, though overflow: hidden already works */
  }

  /* --- 4. Product Information --- */
  .cart-info-cell p {
    font-weight: 600;
    margin: 0 0 5px 0;
    font-size: 1.1rem;
    color: #000;
  }

  /* Style for variants/sizes */
  .variant-details {
    font-size: 0.9rem;
    color: #555;
    margin-bottom: 8px;
    display: block;
  }

  .cart-remove-link {
    font-size: 0.9rem;
    color: #dc3545;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s;
  }

  .cart-remove-link:hover {
    border-color: #dc3545;
  }

  /* --- 5. Actions --- */
  .cart-actions-cell {
    text-align: right;
    white-space: nowrap;
  }

  .cart-quantity-input {
    width: 60px;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
    text-align: center;
    margin-right: 10px;
    font-size: 1rem;
  }

  .cart-update-btn {
    background: transparent;
    border: 1px solid #999;
    padding: 8px 16px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: all 0.2s;
  }

  .cart-update-btn:hover {
    background: #f5f5f5;
    border-color: #333;
  }

  .cart-checkout-btn {
    display: block;
    width: 100%;
    max-width: 300px;
    margin-left: auto;
    background-color: #000;
    color: #fff;
    border: none;
    padding: 15px 30px;
    font-size: 1.1rem;
    font-weight: bold;
    border-radius: 4px;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .cart-checkout-btn:hover {
    opacity: 0.9;
  }

  /* --- 6. Responsiveness --- */
  @media (max-width: 600px) {
    .cart-table td {
      display: block;
      width: 100%;
      text-align: center;
      padding: 10px 0;
      border: none;
    }
    .cart-table tr {
      border-bottom: 1px solid #e5e5e5;
      display: block;
      padding-bottom: 20px;
      margin-bottom: 20px;
    }
    .cart-image-cell {
      width: 100%;
      max-width: 120px;
      margin: 0 auto;
    }
    .cart-actions-cell {
      text-align: center;
    }
    .cart-checkout-btn {
      max-width: 100%;
    }
  }
</style>

<div class="cart-container">
  <h1 class="cart-title">{{ 'cart.title' | t }}</h1>

  <form action="{{ routes.cart_url }}" method="post" class="cart-form">
    <table class="cart-table">
      {% for item in cart.items %}
        <tr>
          <td class="cart-image-cell">
            <a href="{{ item.url }}" class="image-wrapper">
              {% if item.image %}
                <img
                  src="{{ item.image | image_url: width: 200 }}"
                  alt="{{ item.image.alt | default: item.product.title | escape }}"
                  loading="lazy"
                  width="200"
                  height="{{ 200 | divided_by: item.image.aspect_ratio | round }}"
                >
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'image-placeholder' }}
              {% endif %}
            </a>
          </td>
          <td class="cart-info-cell">
            <p>{{ item.product.title | link_to: item.url }}</p>

            {% comment %} Output sizes/variants {% endcomment %}
            {% unless item.variant.title contains 'Default' %}
              <span class="variant-details">{{ item.variant.title }}</span>
            {% endunless %}

            {{ 'cart.remove' | t | link_to: item.url_to_remove, class: 'cart-remove-link' }}
          </td>
          <td class="cart-actions-cell">
            <input
              type="number"
              name="updates[]"
              value="{{ item.quantity }}"
              class="cart-quantity-input"
              aria-label="Quantity"
              min="0"
            >
            <input type="submit" value="{{ 'cart.update' | t }}" class="cart-update-btn">
          </td>
        </tr>
      {% endfor %}
    </table>

    <input type="submit" name="checkout" value="{{ 'cart.checkout' | t }}" class="cart-checkout-btn">
  </form>
</div>

{% schema %}
{
  "name": "t:general.cart",
  "settings": []
}
{% endschema %}
